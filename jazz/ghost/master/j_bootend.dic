	{
		"\0\s[5]IT'S MY BIRTHDAY!!! \w8WOWIE. \w8I AM NOW A YEAR OLDER!\e"
	}
	
	else
	{
		"%(normalboottalk)" //If none of the days above match the current date, the ghost instead will go down to the next function, normalboottalk.
	}
}


